{% extends "::base.html.twig" %}

{% block title %}AgendaPedal - Agendamentos{% endblock %}


{% block body %}
    {%stylesheets
        '@AgendaPedalBundle/Resources/public/css/Agendamento/Agendamento.css'
        %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    <nav class="blue darken-4">
        <div class="nav-wrapper">
            <a href="#" class="brand-logo center">Agenda Pedal</a>
        </div>
    </nav>

    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-content blue-text">
                    <div class="row">
                        <form class="col s12" id="agendamentoFormulario" action="#" method="post">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input id="nomePedal" name="nomePedal" type="text" class="validate">
                                    <label for="first_name">Pedal</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="tipoPedal" id="tipoPedal">
                                        <option value="" disabled selected>Selecione</option>
                                        {% for tipo in tipos %}
                                            <option value="{{ tipo.codigo }}">{{ tipo.nome }}</option>
                                        {% endfor %}
                                    </select>
                                    <label>Tipo de Pedal</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="ritmoPedal" id="ritmoPedal">
                                        <option value="" disabled selected>Selecione</option>
                                        {% for ritmo in ritmos %}
                                            <option value="{{ ritmo.codigo }}">{{ ritmo.nome }}</option>
                                        {% endfor %}
                                    </select>
                                    <label>Ritmo</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <select name="distanciaPedal" id="distanciaPedal">
                                        <option value="" disabled selected>Selecione</option>
                                        {% for distancia in distancias %}
                                            <option value="{{ distancia.codigo }}">{{ distancia.nome }}</option>
                                        {% endfor %}
                                    </select>
                                    <label>Distância</label>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s4">
                                    <select name="estado" id="estado">
                                        <option value="" disabled selected>UF</option>
                                        {% for estado in estados %}
                                            <option value="{{ estado.id }}">{{ estado.uf }}</option>
                                        {% endfor %}
                                    </select>
                                    <label for="estado">Estado</label>
                                </div>
                                <div class="input-field col s8">
                                    <select name="cidade" id="cidade">

                                    </select>
                                    <label for="cidade">Cidade</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12" align="center">
                                    <label>Carro de Apoio</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col s12" id="apoioDiv">
                                    <div class="switch col">
                                        <label>
                                            Não
                                            <input type="checkbox" name="apoioCarro" id="apoioCarro">
                                            <span class="lever"></span>
                                            Sim
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="input-field col s12">
                                    <textarea id="observacoes" class="materialize-textarea" length="120"></textarea>
                                    <label for="observacoes">Observações</label>
                                </div>
                            </div>

                            <div class="row" style="text-align: right">
                                <button class="btn waves-effect theme-color blue darken-2" type="button" name="enviar" id="enviar">Enviar
                                    <i class="material-icons right">send</i>
                                </button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
    {% javascripts
    '@AgendaPedalBundle/Resources/public/js/Agendamento/Agendamento.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

